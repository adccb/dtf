#!/usr/bin/env bash

# remove everything
[[ -L $HOME/.zsh ]] && rm -r $HOME/.zsh
[[ -L $HOME/.zshrc ]] && rm $HOME/.zshrc
[[ -L $HOME/.vim ]] && rm -r $HOME/.vim
[[ -L $HOME/.vimrc ]] && rm $HOME/.vimrc
[[ -L $HOME/.gitignore_global  ]] && rm $HOME/.gitignore_global

# hammerspoon
ln -s $PWD/hammerspoon $HOME/.hammerspoon

# zsh
ln -s $PWD/zsh $HOME/.zsh
ln -s $PWD/zsh/zshrc $HOME/.zshrc

# vim
ln -s $PWD/vim $HOME/.vim
ln -s $PWD/vim/vimrc $HOME/.vimrc

# git
ln -s $PWD/git/gitignore_global $HOME/.gitignore_global

